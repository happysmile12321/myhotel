<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hm.dao.fenlei.FenleiMapper">
<!--
    public void insertBean(Fenlei bean);

    public void deleteBean(Fenlei bean);

    public void updateBean(Fenlei bean);

    public Fenlei selectBean(String where);

    public List<Fenlei> selectBeanList(final int start, final int limit, final String where);

    public int selectBeanCount(final String where);-->


    <insert id="insertBean" parameterType="com.hm.pojo.Fenlei">

        <selectKey keyProperty="id" resultType="Integer" order="AFTER">
            select LAST_INSERT_ID()
        </selectKey>
        INSERT INTO `t_fenlei`(createtime,deletestatus,jiage,leixing)
        VALUES (#{createtime}, #{deletestatus}, #{jiage}, #{leixing});
    </insert>

    <delete id="deleteBean" parameterType="Integer">
        delete from t_fenlei where id = #{value};
    </delete>

    <update id="updateBean" parameterType="com.hm.pojo.Fenlei">
        update t_fenlei set jiage = #{jiage}, deletestatus = #{deletestatus} , leixing = #{leixing} where id =  #{id};
    </update>

</mapper>